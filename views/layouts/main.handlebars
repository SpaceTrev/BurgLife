<script>
	$(document).ready(() => {

  $(".nomNom").on("click", function(event) {
      let id = $(this).data("id");
      // Send the PUT request.
      $.ajax("/api/burgers/" + id, {
        type: "PUT"
      }).then(
        function() {
          location.reload();
        }
      );
    });


		$('#addBurger').on('click', (event) => {
			event.preventDefault();
			let newBurger = {
				name: $('#textbox').val().trim(),
			};
			$.ajax('/api/burgers', {
				type: 'POST',
				data: newBurger
			}).then(
				()=>{
					console.log('new burg');
					location.reload();
				}
			);
		});
	});
</script>